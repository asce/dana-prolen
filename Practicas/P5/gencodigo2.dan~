main{
        begin_declare
                int n,curr,d,ultim,cuenta,primero;
        end_declare
	curr = 2;
	ultim = 0;
	cuenta = 1;
	primero = 1;
	
        write "Introduce n√∫mero : ";
        read n;
        write n," == ";
        curr = 2;
        while( curr <= n){

                d = n/curr;
                if(d*curr == n){
			  if( curr != ultim){
			      ultim = curr;
			      cuenta = 1;
			  }else{
				cuenta = cuenta + 1;
			  }

                          n = n/curr;

                }else{
			if(cuenta > 0){
                        	  if(primero == 0){ 
				  	     write " *";
				  }
				  primero = 0;
				  write " ",curr;
				  if(cuenta > 1){
				  	    write "^",cuenta;
				  }
			}
			curr = curr + 1;
			cuenta = 0;
                }
                

        }
	if(cuenta > 0){
		  if(primero == 0){
		  	     write " *";
		  }
		  primero = 0;
		  write " ",curr;
                  if(cuenta > 1){
                  	    write "^",cuenta;
                  }

	}
	write "\n";
}
